<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <com.example.test.JankView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="#655"
            android:text="测试anr时，前台广播等待10s"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            />
        <com.example.test.JankView
            android:id="@+id/jankView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="#655"
            android:text="Jank"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_10"/>
        <TextView
            android:id="@+id/tvTestJank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:text="测试掉帧"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#675"/>
        <!--发生anr情况1 某个任务特别耗时-->
        <TextView
            android:id="@+id/tvTestAnr1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:text="测试单个任务耗时"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#675"/>
        <TextView
            android:id="@+id/tvTestAnr2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:text="单个任务不耗时，多个任务加起来耗时"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#675"/>
        <TextView
            android:id="@+id/tvTestAnr3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:text="其它进程ANR,当前SignalCatcher会不会收到SIGQUIT信号"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#675"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintBottom_toTopOf="@+id/tv_test_thread_time"/>

    <TextView
        android:id="@+id/tv_test_thread_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试ThreadTime"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text" />

</androidx.constraintlayout.widget.ConstraintLayout>